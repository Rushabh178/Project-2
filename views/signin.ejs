<body class="d-flex align-items-center py-4 bg-body-tertiary">

    <main class="form-signin w-100 m-auto">
        <form method="post" action="/home">

            <img class="d-inline mb-4" src="images/logo.png" alt="hotel-logo" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input type="email" name = "email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

            
            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
            <div class="form-check text-start my-3">
                <% if(locals.error && locals.message) { %>
                <p class=" errorColor no_margin"><%= error %></p>
                <p class="errorColor margin_bottom"><%= message %></p>
                <% } %>
            </div>
            <div class="position-relative">
                <a class="position-absolute bottom-0 start-50 translate-middle-x" href="/signup">Create New Account.</a>
                <p class="position-absolute top-0 start-50 translate-middle-x margin_top">&copy; 2024â€“2030</p>
            </div>
            
        </form>
